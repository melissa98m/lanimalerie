{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

 <div class="row">
    <div class="col-md-3">
    <h2>Filtrer</h2>
    {{ form(form) }}
    </div>
    <div class="col-md-9">

    <h1>Liste de produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Enstock</th>
                <th>Reference</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.enstock ? 'Yes' : 'No' }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
    </div>
    </div>
{% endblock %}
