                        <a class="nav-link active" href="" tabindex="-1"
                            aria-disabled="true">Promotions</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <form class="d-flex my-2 my-lg-0">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
                <ul class="navbar text-end">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <li class="nav-item">
                            <div class="container">
                                <div class="text-center">
                                    <img src="images/panier.png" alt="panier">
                                    <a class="nav-link active text-center" href="/panier" tabindex="-1"
                                        aria-disabled="true" active aria-current="page">Panier</a>
                                </div>
                        </li>
                        <li class="nav-item">
