    {% block main %}
    
    <h1>Nous Contacter</h1>
    
    <div class="" id='formcontact'>
    <p class="text-center">Une questions? N'hesitez pas à nous contacter via ce formulaire et nous tacherons de repondre le plus tot possible</p>
    {{form_start(form) }}
    {{ form_errors(form) }} 
    <div class="d-inline-block">
        {{ form_row(form.civilite , {'label' : "Votre civilité"})}}
        </div>
        {{form_row(form.nom , {'label' : "Votre Nom"})}}<!-- label permet de modifier le nom d'un champs a l'affichage!-->
      {{form_row(form.prenom , {'attr' : { 'class': 'form-control'} , 'label' : 'Votre Prenom'})}}<!-- attr definit un attribut !-->
        
       
    
       {{ form_row(form.email, {'label' : "Votre email"})}}
       {{ form_row(form.motif, {'label' : "Motif"})}}
      {{form_row(form.message , {'label' : "Votre message"}) }}
     {{ form_row(form.envoyer , {'label' : 'Envoyer message'})}}
    {{form_end(form) }} 
   </div>
   

  

   
