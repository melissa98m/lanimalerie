{% extends 'base.html.twig' %}

{% block title %}<title> Détails {{ category.name }}</title>{% endblock %}
{# public/images/logo.png #}
 
    
  
{% block body %}

    <h1>{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
             <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

   

    <a  class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}



    <a href="{{ path('category_index') }}">Retourner à la liste</a>
{% endblock %}
